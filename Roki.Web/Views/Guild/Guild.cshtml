    <h1 class="pl-2 mb-6 text-2xl font-medium tracking-tight">@Model.Name - Manage</h1>
    <div class="flex">
        <div class="w-60">
            <nav class="mr-2">
                <div class="flex flex-col bg-gray-400 rounded">
                    <div class="py-2 pl-2 font-medium">Server Settings</div>
