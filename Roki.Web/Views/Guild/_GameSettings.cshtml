@model GuildChannelModel

<div class="container ml-4">
    <h1 class="text-3xl font-medium tracking-tight">Games Settings</h1>
    <div class="hidden sm:block" aria-hidden="true">
        <div class="py-5">
            <div class="border-t border-gray-200"></div>
        </div>
    </div>
    <form id="form-data" action="#" method="post">
        <div class="rounded-md overflow-hidden bg-grey-100 dark:bg-gray-900 px-4 py-4">
            <h1 class="text-xl font-normal tracking-tight">Trivia</h1>
            <div class="rounded-md mt-4">
                <label for="guild_trivia_min" class="block text-sm font-medium dark:text-gray-200">Minimum Correct</label>
                <div class="mt-1 flex rounded-md">
                    <input type="number" name="guild_trivia_min" id="guild_trivia_min" value="@(Model.Guild.Config.TriviaMinCorrect * 100)" min="1" class="dark:bg-gray-700 dark:focus:ring-pink-900 dark:focus:border-pink-900 dark:border-gray-800 border block w-20 rounded-none rounded-l-md text-sm z-40">
                    <span class="dark:border-gray-800 dark:bg-gray-700 inline-flex items-center px-3 border border-l-0 rounded-r-md text-sm z-0">%</span>
                </div>
            </div>
            <div class="flex flex-wrap mt-4">
                <div class="rounded-md mr-8">
                    <label for="guild_trivia_easy" class="block text-sm font-medium dark:text-gray-200">Easy Reward</label>
                    <div class="mt-1 flex rounded-md">
                        <input type="number" name="guild_trivia_easy" id="guild_trivia_easy" value="@Model.Guild.Config.TriviaEasy" min="1" class="dark:bg-gray-700 dark:focus:ring-pink-900 dark:focus:border-pink-900 dark:border-gray-800 rounded-md border block w-20 text-sm">
                    </div>
                </div>
                <div class="rounded-md mr-8">
                    <label for="guild_trivia_med" class="block text-sm font-medium dark:text-gray-200">Medium Reward</label>
                    <div class="mt-1 flex rounded-md">
                        <input type="number" name="guild_trivia_med" id="guild_trivia_med" value="@Model.Guild.Config.TriviaMedium" min="1" class="dark:bg-gray-700 dark:focus:ring-pink-900 dark:focus:border-pink-900 dark:border-gray-800 rounded-md border block w-20 text-sm">
                    </div>
                </div>
                <div class="rounded-md">
                    <label for="guild_trivia_hard" class="block text-sm font-medium dark:text-gray-200">Hard Reward</label>
                    <div class="mt-1 flex rounded-md">
                        <input type="number" name="guild_trivia_hard" id="guild_trivia_hard" value="@Model.Guild.Config.TriviaHard" min="1" class="dark:bg-gray-700 dark:focus:ring-pink-900 dark:focus:border-pink-900 dark:border-gray-800 rounded-md border block w-20 text-sm">
                    </div>
                </div>
            </div>
            <div class="mt-6 text-right">
                <button id="save-form" class="rounded-lg dark:bg-pink-800 focus:outline-none focus:ring dark:focus:ring-pink-600 py-1.5 px-3 disabled:opacity-50" disabled>Save</button>
            </div>
        </div>
    </form>
</div>