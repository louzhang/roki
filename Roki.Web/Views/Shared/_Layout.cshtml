<!DOCTYPE html>
<html lang="en" class="dark">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"]</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet"/>
    <environment include="Development">
        <link href="~/css/tailwind.css" rel="stylesheet"/>
    </environment>
    <environment exclude="Development">
        <link href="~/css/tailwind.min.css" rel="stylesheet" asp-append-version="true"/>
    </environment>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500&display=swap" rel="stylesheet">
</head>
<body class="bg-gray-100 dark:bg-gray-800 dark:text-white font-sans leading-normal tracking-normal">
<nav class="w-full z-10 top-0 bg-gray-400 dark:bg-gray-900">
    <div class="w-full mx-auto flex flex-wrap items-center justify-between mt-0 py-3">
        <div class="pl-4">
            <a class="text-base no-underline hover:no-underline hover:text-pink-500 dark:hover:text-pink-800 font-extrabold text-xl" href="/">Roki</a>
        </div>
        <div class="block lg:hidden pr-4">
            <button id="nav-toggle" class="flex items-center px-3 py-2 border rounded text-gray-500 border-gray-600 hover:text-gray-900 hover:border-green-500 appearance-none focus:outline-none">
                <svg class="fill-current h-3 w-3" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                    <title>Menu</title>
                    <path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"/>
                </svg>
            </button>
        </div>

        <div class="w-full flex-grow lg:flex lg:items-center lg:w-auto hidden lg:block mt-2 lg:mt-0 bg-gray-100 md:bg-transparent z-20" id="nav-content">
            <ul class="list-reset lg:flex justify-end flex-1 items-center">
                <li class="mr-3">
                    <a class="inline-block no-underline hover:text-pink-500 dark:hover:text-pink-800 hover:text-underline py-2 px-4" href="/manage">Manage</a>
                </li>
                <li class="mr-3">
                    @if (User?.Identity?.IsAuthenticated ?? false)
                    {
                        <a class="inline-block no-underline hover:text-pink-500 dark:hover:text-pink-800 hover:text-underline py-2 px-4" asp-controller="Authentication" asp-action="Logout">Logout</a>
                    }
                    else
                    {
                        <a class="inline-block no-underline hover:text-pink-500 dark:hover:text-pink-800 hover:text-underline py-2 px-4" asp-controller="Authentication" asp-action="Login">Login with Discord</a>
                    }
                </li>
            </ul>
        </div>

    </div>
</nav>
<div>
    @RenderBody()
</div>
@* <script src="~/js/site.js" asp-append-version="true"></script> *@
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>