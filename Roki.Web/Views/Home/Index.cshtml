@{
    ViewData["Title"] = "Home";
}

<div class="container w-full md:max-w-3xl mx-auto pt-4 mx-2">
    <div class="mx-2">
        <h1 class="font-bold text-3xl text-center">Roki Bot</h1>
        <h2 class="font-medium text-lg">
            General purpose Discord bot for small communities
        </h2>
        @if (User?.Identity?.IsAuthenticated ?? false)
        {
            <h1>Welcome, @User.Identity.Name</h1>
            @foreach (var claim in Context.User.Claims)
            {
                <div><code>@claim.Type</code>: <strong>@claim.Value</strong></div>
            }
        }
        else
        {
            <h1>Welcome, anonymous</h1>
        }
    </div>
</div>